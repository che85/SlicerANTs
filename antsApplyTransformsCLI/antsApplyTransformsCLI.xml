<?xml version="1.0" encoding="UTF-8"?>
<executable>
  <category>Registration</category>
  <title>Resample Image (ANTs Apply Transforms)</title>
  <description><![CDATA[This is a CLI module that can be bundled in an extension]]></description>
  <version>0.0.1</version>
  <documentation-url>https://github.com/simonoxen/SlicerANTs</documentation-url>
  <license>Slicer</license>
  <contributor>Simon Oxenford (Netstim Berlin)</contributor>
  <acknowledgements>This work was partially funded by NIH grant NXNNXXNNNNNN-NNXN</acknowledgements>

  <parameters>
    <label>Input</label>
    <description><![CDATA[Input/output parameters]]></description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <longflag>--input</longflag>
      <description><![CDATA[Input volume]]></description>
    </image>
    <image>
      <name>referenceVolume</name>
      <label>Reference Volume</label>
      <channel>input</channel>
      <flag>-r</flag>
      <description><![CDATA[Reference volume]]></description>
    </image>
    <transform>
      <name>transform</name>
      <label>Transform</label>
      <channel>input</channel>
      <longflag>--transform</longflag>
      <description><![CDATA[Transform. Select a transform or a transform file]]></description>
    </transform>
    <string>
      <name>transformFile</name>
      <label>Transform File</label>
      <channel>input</channel>
      <longflag>--transformFile</longflag>
      <description><![CDATA[Transform file name. Select a transform or a transform file]]></description>
    </string>
  </parameters>

  <parameters>
    <label>Output</label>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <longflag>--output</longflag>
      <description><![CDATA[Output Volume. If using output volume don't specify an output displacement field]]></description>
    </image>
    <transform type="nonlinear" fileExtensions=".nii.gz">
      <name>outputDisplacementField</name>
      <label>Output Displacement Field</label>
      <channel>output</channel>
      <longflag>--outputDisplacementField</longflag>
      <description><![CDATA[Output Transform. If using displacement field don't specify an output volume]]></description>
    </transform>
  </parameters>

  <parameters>
    <label>Settings</label>
    <string-enumeration>
      <name>interpolationMode</name>
      <longflag>--interpolation</longflag>
      <label>Interpolation Mode</label>
      <description>Type of interpolation to be used when applying transform to moving volume.</description>
      <default>Linear</default>
      <element>NearestNeighbor</element>
      <element>Linear</element>
      <element>Gaussian</element>
      <element>BSpline</element>
      <element>CosineWindowedSinc</element>
      <element>WelchWindowedSinc</element>
      <element>HammingWindowedSinc</element>
      <element>LanczosWindowedSinc</element>
    </string-enumeration>
    <!-- <string-enumeration>
      <name>outputDataType</name>
      <flag>-u</flag>
      <label>Output Data Type</label>
      <description>Output image data type. This is a direct typecast; output values are not rescaled. Default is to use the internal data type (float or double).</description>
      <default>default</default>
      <element>char</element>
      <element>uchar</element>
      <element>short</element>
      <element>int</element>
      <element>float</element>
      <element>double</element>
      <element>default</element>
    </string-enumeration> -->
    <boolean>
      <name>useFloat</name>
      <label>Float</label>
      <channel>input</channel>
      <longflag>--float</longflag> 
      <default>true</default>
      <description><![CDATA[Use 'float' instead of 'double' for computations]]></description>
    </boolean>
  </parameters>

</executable>
